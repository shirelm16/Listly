<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Listly.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Listly.View"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="{StaticResource Surface}"
    Shell.TabBarForegroundColor="{StaticResource Primary}"
    Shell.TabBarTitleColor="{StaticResource Primary}"
    Shell.TabBarUnselectedColor="{StaticResource OnSurfaceVariant}"
    Shell.TabBarIsVisible="True"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <!-- Lists Tab -->
        <ShellContent
            Title="Lists"
            Icon="lists.png"
            ContentTemplate="{DataTemplate view:MainPage}"/>

        <!-- Profile Tab -->
        <ShellContent
            Title="Profile"
            Icon="profile.svg"
            ContentTemplate="{DataTemplate view:ProfilePage}" />
    </TabBar>

</Shell>
